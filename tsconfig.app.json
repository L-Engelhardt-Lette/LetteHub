{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist/node",
    "rootDir": "./src/node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/node/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}